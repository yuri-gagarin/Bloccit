<h1>New Advertisement</h1>
<div class="row">
  <%= form_for @advertisement do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control", placeholder: "Enter ad title" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: "form-control", placeholder: "Enter an ad description" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.number_field :price, class: "form-control", placeholder: 0 %>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
